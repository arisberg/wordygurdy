<!DOCTYPE html>
<html>
<head>
  <title>Wordygurdy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
    <div class="nav navbar-nav">
        <%= link_to "Home", puzzles_path%>
        <%= link_to "Create a Wordy Gurdy", puzzles_new_path%>
        <%= link_to "Leader Board", '/leaders' %>
        <% if current_user %>


          <p class="navbar-text">Signed in as <strong> <%= current_user.username %></strong></p>
          <%= link_to "Profile", '/userhome'%>
          <%= link_to "Logout", '/logout'%>


        <% else %>
        <li><%= link_to "Login", '/login'%></li>
        <li><%= link_to "Sign Up", '/signup'%></li>
        <% end %>
    </ul>
    </div>
  </div>
</nav>

<div class="container">
<%= yield %>
</div>

</body>
</html>
