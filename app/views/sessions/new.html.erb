<div class="jumbotron green">
  <h1 class="text-center">Wordy Gurdy<small class="whitetext">  A word game</small></h1>
    <div class="text-center">
      <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">
          How to Play
      </button>
    </div>
</div>

<div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Please login to start playing</h1>
    <div class= "text-center">
    <%= image_tag('logo.png') %>
    </div>
    <p class= "text-center red"><%= flash[:error] %></p>
    <h2 class = "text-center">If you don't have an account, create one here!</h2>
    <div class="text-center">
    <button type = "button" class="btn btn-default btn-lg" data-toggle='modal' data-target='#signup_modal'>Sign up</button>
    </div>
    <div class="form-group">
        <%= form_tag('/login', method: :post) do %>
            <%= label_tag :username%>
            <%= text_field_tag :username, nil,  class: "form-control" %>
            <br/>
            <%= label_tag :password %>
            <%= password_field_tag :password, nil,  class: "form-control" %>
            <br/>
            <%= submit_tag "Login", class: "btn btn-default" %>
        <% end %>
    </div>
</div>


 <!-- Rules Modal -->
<%= render 'puzzles/modal'%>

<!-- Sign up Modal -->

<%= render 'users/signup_modal' %>
